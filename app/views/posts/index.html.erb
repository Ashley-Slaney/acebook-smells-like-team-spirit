<li><%= link_to "Homepage", "/welcome", method: :get %></li>
<li><%= link_to "New post", "/posts/new", method: :get%></li>
<li class="right_links"><%= link_to 'Logout', '/logout', method: :post %></li>
<li class="right_links">Online: <%= current_user.username %></li>

<br>

<h2>Posts</h2>

<% @posts.each do |post| %>
  <p><%= post.message %></p>
  <p><%= image_tag post.image if post.image.attached? %></p>
<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
<br>
<%= button_to 'Logout', '/logout', method: :post%>
