<h1>Login</h1>
  <%= form_tag '/login' do %>
  <%= label_tag :username %>
  <%= text_field_tag :username %>
  <%= label_tag :password%>
  <%= password_field_tag :password%>
  <%= submit_tag "Login" %>
<% end %>
<br>

<%# button that takes us to posts 
but takes us to homepage since we're not logged in %>
<%= button_to 'Homepage', '/posts', method: :get%>